. /etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=infiniband
pmda_interface=3
daemon_opt=true
dso_opt=false
pipe_opt=true
socket_opt=false

path=/sys/class/infiniband_mad
if ! test -d $path; then
    echo "Kernel lacks Infiniband support - $path directory not found"
    status=1
    exit
fi

__choose_ipc()
{
    ipc_type=pipe
    type="pipe  binary       $PCP_PMDAS_DIR/infiniband/pmdaib"
}

pmdaSetup
pmdaInstall
exit
